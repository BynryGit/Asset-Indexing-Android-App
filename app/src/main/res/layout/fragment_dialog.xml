<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTransparent"
    android:id="@+id/relative_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_centerInParent="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/tools"
            android:layout_centerInParent="true"
            android:elevation="10dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="6dp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="10p"
            android:background="@color/colorBlack"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            xmlns:android="http://schemas.android.com/apk/res/android">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp"
                android:layout_marginTop="35dp">

                <Spinner
                    android:id="@+id/spinner_main_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="1.5dp"
                    android:background="@color/colorFaintBlack"
                    android:paddingLeft="8dp"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinner_main_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="1.5dp"
                    android:background="@color/colorFaintBlack"
                    android:paddingLeft="8dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="10dp"/>

                <Spinner
                    android:id="@+id/spinner_main_sub_sub_category"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_gravity="left"
                    android:layout_marginRight="1.5dp"
                    android:background="@color/colorFaintBlack"
                    android:paddingLeft="8dp"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="10dp"/>

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="180dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/margin_h5"
                    android:text="@string/ok"
                    android:background="@color/colorButton"
                    android:textColor="@color/colorWhite"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_action_cancel_filled"
        android:layout_marginTop="25dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/relativeLayout"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="5dp" />

</RelativeLayout>

